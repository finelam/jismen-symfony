{% extends '::adminbase.html.twig' %}

{% block body -%}
    <h1>Fournisseur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ entity.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Numéro de contrat</th>
                <td>{{ entity.contract }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a href="{{ path('supplier') }}" class="btn btn-primary">
            Retour à la liste
        </a>
        <a href="{{ path('supplier_edit', { 'id': entity.id }) }}" class="btn btn-warning">
            Modifier
        </a>
    </div>
{% endblock %}
